{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
        "name": "afl",
        "displayName": "AFL++ Config",
        "description": "AFL++ build using make generator",
        "generator": "Unix Makefiles",
        "binaryDir": "${sourceDir}/build/afl",
        "environment": {
            "PATH": "/opt/afl++/bin:$penv{PATH}"
        },
        "cacheVariables" : {
            "CMAKE_CXX_COMPILER": "afl-clang-fast++"
        }
    },
    {
        "name": "sanitized",
        "displayName": "Sanitized Config",
        "description": "Sanitized build using make generator",
        "generator": "Unix Makefiles",
        "binaryDir": "${sourceDir}/build/sanitized",
        "cacheVariables": {
            "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
            "CMAKE_CXX_FLAGS": "-O1 -g -fsanitize=address,undefined"
        }
    }
  ],
  "buildPresets": [
    {
      "name": "afl",
      "configurePreset": "afl"
    },
    {
      "name": "sanitized",
      "configurePreset": "sanitized"
    }
  ]
}